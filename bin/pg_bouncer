#!/usr/bin/env bash

cd "$(dirname "$0")/.."

if [ ! -f "bin/start-pgbouncer-stunnel" ]; then
  echo "fatal: pgbouncer buildpack not found, please install it"
  echo "https://github.com/heroku/heroku-buildpack-pgbouncer"
  exit 1
fi

export PGBOUNCER_PREPARED_STATEMENTS=false
exec bin/start-pgbouncer-stunnel "$@"
